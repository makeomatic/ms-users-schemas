{
  "type": "object",
  "oneOf": [
    {
      "required": [ "namespace", "token" ]
    },
    {
      "required": [ "username" ]
    }
  ],
  "properties": {
    "username": {
      "type": "string"
    },
    "namespace": {
      "type": "string",
      "enum": [ "activate", "reset" ]
    },
    "token": {
      "type": "string",
      "minLength": 1
    },
    "remoteip": {
      "type": "string",
      "format": "ipv4"
    },
    "audience": {
      "type": "string",
      "minLength": 1
    }
  }
}